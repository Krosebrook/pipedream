{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@pipedream/*": ["packages/*/src", "components/*/app"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*",
    "**/__tests__/**"
  ]
}